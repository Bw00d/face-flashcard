<%= content_for :title, "Learn" %>

<div class="row">
	<div id="show-face" class="small-12 medium-10 large-8 columns medium-centered large-centered">
		<div class="row">
			<div id="avatar-holder" class="small-12 small-centered large-4 columns">
				<div>
			    <div class="show-avatar">
			      <%= link_to (image_tag @face.avatar.url, id: 'avatar-image'), face_path(@face) %>
			    </div>
				</div>
			</div> 
			<div class="small-12 medium-10 large-8 medium-centered large-centered text-center columns">
				<h5 class="light-head">GUESS WHO?</h5>
			</div>
			<div id="choices">
				<ul>
					<% @choices.shuffle.each do |choice| %>
						<li><%= fa_icon "check", class: 'icon' %><h5><%= link_to (choice), 'javascript:;' %></h5></li>
					<% end %>
				</ul>
			</div>
			<div id="study-button">
				<%= link_to "STUDY", learn_path, class: "button radius success " %>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
$('li').click(function() {
	$(this).children().addClass('correct');
});

</script>

<%#= fa_icon "envelope", class: 'icon' %>