<%= content_for :title, @face.name %>

<div class="row">
	<div id="show-face" class="small-12 medium-10 large-8 columns medium-centered large-centered">
		<div class="row">
			<div id="avatar-holder" class="small-12 small-centered large-4 columns">
				<div>
			    <div class="show-avatar">
			      <%= image_tag @face.avatar.url, id: 'avatar-image' %>
			    </div>
				</div>
			</div> 
			<div class="small-12 medium-10 large-8 medium-centered large-centered text-center columns">
				<h5><%= @face.name %></br><%= @face.agency%></h5>
				<p><%= link_to "edit", edit_face_path(@face) %></p>
			</div>
			<div id="study-button">
				<%= link_to "STUDY", learn_path, class: "button radius success " %>
			</div>
			<div id="new-face-button">
				<%= link_to "ADD FACE", new_face_path, class: "button radius" %>
			</div>
		</div>
	</div>
</div>
